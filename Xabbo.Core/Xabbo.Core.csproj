<Project Sdk="Microsoft.NET.Sdk">

  <!-- Project -->
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>Xabbo.Core</RootNamespace>
    <AssemblyName>Xabbo.Core</AssemblyName>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <Nullable>enable</Nullable>
    <DebugType>embedded</DebugType>
    <Configurations>Debug;Release;Develop</Configurations>
  </PropertyGroup>

  <!-- Configurations -->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Develop|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <!-- Package -->
  <PropertyGroup>
    <PackageId>Xabbo.Core</PackageId>
    <Description>Provides data structure parsing, game state management, and interactions for Habbo packet interceptors.</Description>
    <Version Condition="'$(Configuration)'=='Develop'">0.0.0-dev</Version>
    <Version Condition="'$(Configuration)'=='Release'">1.0.0-beta</Version>
    <InformationalVersion>$(Version)</InformationalVersion>
    <Authors>b7</Authors>
    <LocalPackageCache>%USERPROFILE%\.nuget\packages</LocalPackageCache>
    <LocalPackageSource>%USERPROFILE%\.nuget\local</LocalPackageSource>
  </PropertyGroup>
  
  <!-- Rename paths -->
  <PropertyGroup>
    <AppOutputBase>$(MSBuildProjectDirectory)\</AppOutputBase>
    <PathMap>$(AppOutputBase)=Xabbo.Core\</PathMap>
  </PropertyGroup>

  <!-- Documentation -->
  <PropertyGroup>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(MSBuildProjectName).xml</DocumentationFile>
  </PropertyGroup>

  <!-- Resources -->
  <ItemGroup>
    <None Remove="Resources\figure_part_genders" />
    <EmbeddedResource Include="Resources\figure_part_genders" />
  </ItemGroup>

  <!-- References -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="5.0.0" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(Configuration)'=='Debug'">
    <ProjectReference Include="$(SolutionDir)\Xabbo.Common\Xabbo.Common\Xabbo.Common.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)'=='Develop'">
    <PackageReference Include="Xabbo.Common" Version="0.0.0-dev*" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(Configuration)'=='Release'">
    <PackageReference Include="Xabbo.Common" Version="1.0.0-beta*" />
  </ItemGroup>

  <!-- Update package in local source after pack -->
  <Target Name="NugetDeletePackage" AfterTargets="Pack" Condition="'$(Configuration)'=='Develop'">
    <Exec Command="nuget delete $(PackageId) $(Version) -Source $(LocalPackageCache) -NonInteractive" ContinueOnError="true" />
    <Exec Command="nuget delete $(PackageId) $(Version) -Source $(LocalPackageSource) -NonInteractive" ContinueOnError="true" />
  </Target>
  <Target Name="NugetAddPackage" AfterTargets="Pack" Condition="'$(Configuration)'!='Debug'">
    <Exec Command="nuget add bin\$(ConfigurationName)\$(PackageId).$(Version).nupkg -Source $(LocalPackageSource)" />
  </Target>

</Project>
